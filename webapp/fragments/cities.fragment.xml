<core:FragmentDefinition xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns="sap.m">

    <Select id="dropdown" items="{/cities}">
        <items>
            <core:Item text="{name}" key="{name}" />
        </items>
    </Select>
    <!-- combobox = input + dropdown together-->
    <ComboBox id="combox" items="{/cities}">
        <items>
            <core:Item text="{name}" key="{name}"></core:Item>
        </items>
    </ComboBox>
    <!-- allows multiple selection of data-->
    <MultiComboBox id="multicombo" items="{/cities}">
        <items>
            <core:Item text="{name}" key="{name}"></core:Item>
        </items>
    </MultiComboBox>

</core:FragmentDefinition>